<%- include ('partials/header.ejs') %>
<%- include ('partials/homeNavbar.ejs') %>

<body>
<div class="container">
	<hr>
	<div class="jumbotron form-control bg-light ">

		<h1 class="display-4">Bem vindo!</h1>

		<p class="lead">Este é um simples blog do curso de NodeJs</p>

		<hr class="my-4">

		<p>Explicação detalhada</p>

		<a class="btn btn-primary btn-lg" href="#" role="button">Saiba mais</a>

	</div>
