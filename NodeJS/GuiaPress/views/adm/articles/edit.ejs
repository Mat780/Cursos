<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
	<hr>
	<div class="card">
		<div class="card-header">
			<h2>Edição de artigo</h2>
		</div>
		<div class="card-body">
			<form method="POST" action="/adm/articles/update">
				<input class="form-control" type="text" name="title" placeholder="Defina o título do artigo" value="<%= article.title %>"><br>
				<textarea class="form-control" name="body" id="article" ><%= article.body %></textarea>
				<input type="hidden" name="id" value="<%= article.id %>">
				<br>
				<label>Categoria</label>
				<select name="category" class="form-control">
					<% categories.forEach( category => { %>

						<% if(category.id == article.categoryId) { %>
							<option value="<%= category.id %>" selected><%= category.title %></option>
						
						<% } else {%>

							<option value="<%= category.id %>"><%= category.title %></option>

						<% } %>
					<% })%>

				</select><br>
				<button class="btn btn-success">Salvar</button>
			</form>
			
		</div>
	</div>
</div>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

	tinymce.init({
		language: 'pt_BR',
		selector: "#article",
		activeEditor: true,
		plugins: [
			'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatatime media save table paste emoticons'
		]
	})

</script>