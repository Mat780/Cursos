<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
	<hr>
	<h2>Categorias</h2>
	<a class="btn btn-success" href="/adm/categories/new">Criar nova categoria</a>
	<hr>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th>Titulo</th>
				<th>Slug</th>
				<th>Ações</th>
			</tr>
		</thead>

		<tbody>
			<% categories.forEach(category => { %>
				<tr>
					<th><%= category.id %></th>
					<th><%= category.title %></th>
					<th><%= category.slug %></th>
					<th>
						<a class="btn btn-warning" href="/adm/categories/edit/<%= category.id %>">Editar</a>

						<form method="POST" action="/categories/delete" style="display: inline" onsubmit="confirmarDelete(event, this)">
							<input type="hidden" name="id" value="<%= category.id %>">
							<button class="btn btn-danger">Deletar</button>
						</form>
						
					</th>
				</tr>
			<% }) %>
		</tbody>

	</table>
</div>

<%- include ('../../partials/footer.ejs') %>

<script>
	function confirmarDelete(event, form){
		event.preventDefault();
		const decision = confirm("Você quer deletar esta categoria?");

		if(decision) form.submit();
	}
</script>