<%- include ('partials/header.ejs') %> 

<body>

	<%- include ('partials/navbar.ejs') %>

	<div class="container">
		<br>
		<h1>Perguntas</h1>
		<hr>
		<a href="/perguntar" class="btn btn-primary">Perguntar</a>
		<hr>

		<% questions.forEach(question => {%>

			<div class="card">
				<div class="card-body">
					<h3><%= question.titulo %></h3>
				</div>
			</div>

			<div class="card-footer">
				<a href="/pergunta/<%= question.id %>"><button class="btn btn-primary">Responder</button></a>
			</div>

		<% }); %>
	</div>

</body>

<%- include ('partials/footer.ejs') %>