<%- include ('partials/header.ejs') %>

<body>
	
	<%- include ('partials/navbar.ejs') %>
	<div class="container">
		<br>
		<h1><%= question.titulo %></h1>
		<p><%= question.descrição  %></p>
		<hr>
		<form method="POST" action="/responder">
			<label for="resArea">Resposta:</label>
			<textarea placeholder="Coloque aqui sua resposta" name="corpo" id="resArea" class="form-control"></textarea><br>

			<input type="hidden" name="questionId" value="<%= question.id %>">
			<button type="submit" class="btn btn-success">Responder</button>
		</form>
		<hr>
		<h3>Respostas</h3>
		<hr>
		<% respostas.forEach(res => { %>
			<br>
			<div class="card">
				<div class="card-body">
					<%= res.corpo %> 
				</div>
			</div>

		<% }); %> 
	</div>

</body>

<% include ('partials/footer.ejs') %> 